PORT=3000
NODE_ENV=development

# Proxy OFF for functional test
PROXY_ROTATION=off
FORCE_DIRECT=1

# Tuning
MAX_RETRIES=3
REQUEST_TIMEOUT_MS=30000
MIN_DELAY_MS=500
MAX_DELAY_MS=1500

# Optional pretty logs (needs pino-pretty installed)
LOG_PRETTY=1
LOG_LEVEL=info

# If you later enable proxy, set these and PROXY_ROTATION=on, FORCE_DIRECT=0
# PROXY_HOST=your.proxy.host
# PROXY_PORT=8080
# PROXY_USERNAME=user
# PROXY_PASSWORD=pass
